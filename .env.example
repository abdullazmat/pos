# Mercado Pago Configuration
# Get your credentials from https://www.mercadopago.com/developers/panel
MERCADO_PAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercadopago_public_key

# Stripe
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pos-saas

# JWT Secrets (32+ chars)
JWT_SECRET=your_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Email Configuration (for password recovery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Node environment
NODE_ENV=development
